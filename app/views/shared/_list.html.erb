<table class="table text-center">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Email</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% users.each_with_index do |user, index| %>
      <tr>
        <th scope="row"><%= index + 1 %></th>
        <td><%= user.email %></td>
        <td>
        <div id="div-<%= user.id %>">
          <%= already_assigned(params[:id], user.id, list_of) ? 
          (link_to 'Remove', (list_of == "dev" ? remove_dev_project_path(user_id: user.id) : remove_qa_project_path(user_id: user.id)), method: :get, class: 'btn btn-danger', id: "remove-#{user.id}", remote: true) : 
          (link_to 'Assign', (list_of == "dev" ? assign_dev_project_path(user_id: user.id) : assign_qa_project_path(user_id: user.id)), method: :get, class: 'btn btn-warning', id: "assign-#{user.id}", remote: true) %>
        </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>